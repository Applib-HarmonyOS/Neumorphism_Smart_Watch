<div class="neumorph_container" show="{{visible}}" style="width: {{width}}; height: {{height}}; border-radius: {{border}};">
    <div class="neumorph_innercontainer neumorph_alert" style="border-radius: {{border}};">
        <image class="icon" src="{{icon}}" if="{{icon}}"></image>
        <div class="slot"><slot></slot></div>
        <text class="close" onclick="toggleShow" style="font-weight: bold;">X</text>
    </div>
</div>