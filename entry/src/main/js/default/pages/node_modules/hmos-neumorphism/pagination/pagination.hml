<div class="neumorph_container" style="width: {{width}}; height: {{height}}; border-radius: {{border}};">
    <div class="neumorph_innercontainer neumorph_pagination" style="border-radius: {{border}};">
        <div class="previous" style="border-radius: {{border}};" onclick="clickPrevious">
            <div class="left">
                <div if="{{color}}" class="leftIcon" style="border: 5px solid {{color}}; border-top: 0px; border-left: 0px;"></div>
                <div class="leftIcon" style="border-bottom: 4px solid black; border-right: 4px solid black;" else></div>
            </div>
        </div>
        <div class="slot"><slot></slot></div>
        <div class="next" style="border-radius: {{border}};" onclick="clickNext">
            <div class="right">
                <div if="{{color}}" class="rightIcon" style="border: 5px solid {{color}}; border-top: 0px; border-left: 0px;"></div>
                <div class="rightIcon" style="border-bottom: 4px solid black; border-right: 4px solid black;" else></div>
            </div>
        </div>
    </div>
</div>